---
import type { CollectionEntry } from 'astro:content';
import FormattedDate from '@/components/FormattedDate.astro';
import { getPostSlug } from '@/lib/blog';
import { getTranslations, type Language } from '@/lib/translations';

interface Props {
  posts: CollectionEntry<'blog'>[];
  lang: Language;
}

const { posts, lang } = Astro.props;
const t = getTranslations(lang);
const blogPrefix = lang === 'es' ? '/es/blog' : '/blog';
---

{
  posts.length > 0 && (
    <aside class="mt-16 border-t border-gray-200 pt-10 dark:border-gray-700">
      <div class="mb-6">
        <h2 class="mb-2 text-2xl font-bold text-gray-900 dark:text-white">
          {t.relatedArticles}
        </h2>
        <p class="text-sm text-gray-600 dark:text-gray-300">
          {t.relatedArticlesDescription}
        </p>
      </div>
      <div class="grid grid-cols-1 gap-5 md:grid-cols-2 lg:grid-cols-3">
        {posts.map((post) => {
          const postSlug = getPostSlug(post.id);
          const href = `${blogPrefix}/${postSlug}/`;
          return (
            <article class="overflow-hidden rounded-xl border border-gray-200 bg-white shadow-sm transition-shadow hover:shadow-md dark:border-gray-700 dark:bg-gray-800">
              {post.data.heroImage ? (
                <a href={href} class="block">
                  <img
                    src={post.data.heroImage}
                    alt={post.data.title}
                    class="h-40 w-full object-cover"
                    loading="lazy"
                  />
                </a>
              ) : (
                <a
                  href={href}
                  class="flex h-40 items-center justify-center bg-gray-100 text-sm text-gray-500 dark:bg-gray-900 dark:text-gray-400"
                >
                  {post.data.title}
                </a>
              )}
              <div class="p-4">
                <h3 class="mb-2 line-clamp-2 text-lg font-semibold text-gray-900 dark:text-white">
                  <a href={href} class="transition-colors hover:text-blue-600 dark:hover:text-blue-400">
                    {post.data.title}
                  </a>
                </h3>
                <p class="mb-3 line-clamp-2 text-sm text-gray-600 dark:text-gray-300">
                  {post.data.description}
                </p>
                <div class="mb-3 text-xs text-gray-500 dark:text-gray-400">
                  <FormattedDate date={post.data.pubDate} lang={lang} />
                </div>
                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2">
                    {post.data.tags.slice(0, 3).map((tag) => (
                      <a
                        href={`${blogPrefix}/tag/${tag}/`}
                        class="rounded bg-blue-100 px-2 py-0.5 text-xs text-blue-800 transition-colors hover:bg-blue-200 dark:bg-blue-900 dark:text-blue-200 dark:hover:bg-blue-800"
                      >
                        #{t.tagNames[tag] || tag}
                      </a>
                    ))}
                  </div>
                )}
              </div>
            </article>
          );
        })}
      </div>
    </aside>
  )
}
