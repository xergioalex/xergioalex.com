---
import { getCollection } from 'astro:content';
import FormattedDate from '@/components/FormattedDate.astro';
import { getPostSlug, isPostVisibleInProduction } from '@/lib/blog';
import { getUrlPrefix, type Language } from '@/lib/i18n';
import { getTranslations } from '@/lib/translations';

interface Props {
  lang?: string;
  grouped?: boolean;
  surface?: 'default' | 'alt';
}

const { lang = 'en', grouped = false, surface = 'alt' } = Astro.props;
const t = getTranslations(lang as Language);
const sectionSpacing = grouped
  ? 'pt-6 sm:pt-8 lg:pt-10 pb-12 sm:pb-16 lg:pb-20'
  : 'py-16';
const sectionSurface =
  surface === 'alt'
    ? 'bg-gray-50 dark:bg-gray-800'
    : 'bg-white dark:bg-gray-900';

const prefix = getUrlPrefix(lang as Language);
const viewAllText = t.homeSections.viewAllPosts;

const allPosts = await getCollection('blog');
const posts = allPosts
  .filter(
    (post) => post.id.startsWith(`${lang}/`) && isPostVisibleInProduction(post)
  )
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 2);
---

<section class={`${sectionSpacing} ${sectionSurface} transition-colors duration-300`}>
  <div class="main-container">
    <h2
      class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-8"
    >
      {t.homeSections.latestArticles}
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {
        posts.map((post) => (
          <a
            href={`${prefix}/blog/${getPostSlug(post.id)}/`}
            class="block bg-white dark:bg-gray-900 rounded-xl shadow hover:shadow-lg hover:-translate-y-1 transition-all duration-200 overflow-hidden"
          >
            {post.data.heroImage && (
              <img
                src={post.data.heroImage}
                alt={post.data.title}
                width={600}
                height={160}
                class="w-full h-40 object-cover"
                loading="lazy"
              />
            )}
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
                {post.data.title}
              </h3>
              <p class="text-gray-600 dark:text-gray-300 mb-3">
                {post.data.description}
              </p>
              <span class="text-gray-600 dark:text-gray-300 text-sm">
                <FormattedDate date={post.data.pubDate} lang={lang} />
              </span>
            </div>
          </a>
        ))
      }
    </div>
    <div class="mt-8 text-center">
      <a
        href={`${prefix}/blog`}
        class="inline-block border-b-2 border-secondary text-secondary font-bold text-xl hover:opacity-80 transition"
      >
        {viewAllText} &rarr;
      </a>
    </div>
  </div>
</section>
