---
interface Props {
  lang?: string;
}

const { lang = 'en' } = Astro.props;

const title = lang === 'es' ? 'Conectemos' : "Let's Connect";
const description =
  lang === 'es'
    ? 'Siempre estoy abierto a conversaciones interesantes, oportunidades de colaboraci\u00F3n y nuevas ideas. Ya sea que quieras hablar de tecnolog\u00EDa, emprendimiento o simplemente saludar.'
    : "I'm always open to interesting conversations, collaboration opportunities, and new ideas. Whether you want to talk tech, entrepreneurship, or just say hello.";
const emailLabel = lang === 'es' ? 'Env\u00EDame un email' : 'Send me an email';
---

<section
  id="contacto"
  class="py-16 bg-white dark:bg-gray-900 transition-colors duration-300"
>
  <div class="max-w-3xl mx-auto px-4 text-center">
    <h2
      class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4"
    >
      {title}
    </h2>
    <p class="text-lg text-gray-600 dark:text-gray-300 mb-8 max-w-xl mx-auto">
      {description}
    </p>

    <!-- Social links -->
    <div class="flex justify-center gap-8 mb-8">
      <a
        href="https://github.com/xergioalex"
        target="_blank"
        rel="noopener"
        aria-label="GitHub"
        class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
      >
        <img
          src="/icons/github_white.svg"
          alt="GitHub"
          class="w-10 h-10 dark:opacity-80 dark:hover:opacity-100 transition-opacity invert dark:invert-0"
        />
      </a>
      <a
        href="https://www.linkedin.com/in/xergioalex/"
        target="_blank"
        rel="noopener"
        aria-label="LinkedIn"
        class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
      >
        <img
          src="/icons/linkedin_white.svg"
          alt="LinkedIn"
          class="w-10 h-10 dark:opacity-80 dark:hover:opacity-100 transition-opacity invert dark:invert-0"
        />
      </a>
      <a
        href="https://x.com/XergioAleX"
        target="_blank"
        rel="noopener"
        aria-label="X"
        class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
      >
        <img
          src="/icons/x_white.svg"
          alt="X"
          class="w-10 h-10 dark:opacity-80 dark:hover:opacity-100 transition-opacity invert dark:invert-0"
        />
      </a>
      <a
        href="https://www.instagram.com/xergioalex"
        target="_blank"
        rel="noopener"
        aria-label="Instagram"
        class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
      >
        <img
          src="/icons/instagram_white.svg"
          alt="Instagram"
          class="w-10 h-10 dark:opacity-80 dark:hover:opacity-100 transition-opacity invert dark:invert-0"
        />
      </a>
    </div>

    <!-- Email CTA -->
    <p class="text-gray-500 dark:text-gray-400 text-sm mb-2">{emailLabel}</p>
    <a
      href="mailto:xergioalex@gmail.com"
      class="inline-block border-b-2 border-secondary text-secondary font-bold text-xl hover:opacity-80 transition"
    >
      xergioalex@gmail.com
    </a>
  </div>
</section>
