---
interface Props {
  image: string;
}

const { image } = Astro.props;
---

<div
  class="flex-shrink-0 w-full md:w-auto flex justify-center md:justify-start"
>
  <div class="relative" style="width: 420px;">
    <img
      src={image}
      alt="Sergio Alex"
      class="object-cover w-full h-full"
      style="min-width: 320px;"
    />
  </div>
</div>
