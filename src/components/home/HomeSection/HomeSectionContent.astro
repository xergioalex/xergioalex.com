---
interface Props {
  title: string;
  subtitle?: string;
  description: string;
  ctaText?: string;
  ctaLink?: string;
  cta2Text?: string;
  cta2Link?: string;
}

const { title, subtitle, description, ctaText, ctaLink, cta2Text, cta2Link } =
  Astro.props;
---

<div
  class="flex-1 flex flex-col justify-center items-center md:items-start text-center md:text-left"
>
  <h2
    class="text-6xl font-extrabold text-gray-900 mb-4 leading-tight"
    set:html={title}
  />
  <h3 class="text-2xl text-gray-700 mb-6 font-semibold" set:html={subtitle} />
  <p class="text-xl text-gray-600 mb-10 max-w-2xl" set:html={description} />
  {
    (ctaText || cta2Text) && (
      <div class="flex gap-4">
        {ctaText && (
          <a
            href={ctaLink}
            class="inline-block border-b-2 border-secondary text-secondary font-bold text-2xl hover:text-secondary-800 transition"
            set:html={ctaText}
          />
        )}
        {cta2Text && (
          <a
            href={cta2Link}
            class="inline-block border-b-2 border-secondary text-secondary font-bold text-2xl hover:text-secondary-800 transition"
            set:html={cta2Text}
          />
        )}
      </div>
    )
  }
</div>
