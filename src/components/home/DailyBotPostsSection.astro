---
import { getCollection } from 'astro:content';
import FormattedDate from '@/components/FormattedDate.astro';
import { getPostSlug } from '@/lib/blog';
import { getUrlPrefix, type Language } from '@/lib/i18n';
import { getTranslations } from '@/lib/translations';

interface Props {
  lang?: Language;
  grouped?: boolean;
  surface?: 'default' | 'alt';
}

const { lang = 'en', grouped = false, surface = 'default' } = Astro.props;
const t = getTranslations(lang);
const prefix = getUrlPrefix(lang);
const sectionSpacing = grouped
  ? 'pt-6 sm:pt-8 lg:pt-10 pb-12 sm:pb-16 lg:pb-20'
  : 'py-16';
const sectionSurface =
  surface === 'alt'
    ? 'bg-gray-50 dark:bg-gray-800'
    : 'bg-white dark:bg-gray-900';

const allPosts = await getCollection('blog');
const posts = allPosts
  .filter((post) => post.id.startsWith(`${lang}/`))
  .filter((post) => post.data.tags?.includes('dailybot'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 2);
---

<section class={`${sectionSpacing} ${sectionSurface} transition-colors duration-300`}>
  <div class="main-container">
    <h2
      class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-8"
    >
      {t.homeSections.dailybotPostsTitle}
    </h2>
    {posts.length > 0 ? (
      <>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {
            posts.map((post) => (
              <a
                href={`${prefix}/blog/${getPostSlug(post.id)}/`}
                class="block bg-gray-50 dark:bg-gray-800 rounded-xl shadow hover:shadow-lg hover:-translate-y-1 transition-all duration-200 overflow-hidden"
              >
                {post.data.heroImage && (
                  <img
                    src={post.data.heroImage}
                    alt=""
                    class="w-full h-40 object-cover"
                    loading="lazy"
                  />
                )}
                <div class="p-6">
                  <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
                    {post.data.title}
                  </h3>
                  <p class="text-gray-600 dark:text-gray-300 mb-3">
                    {post.data.description}
                  </p>
                  <span class="text-gray-500 dark:text-gray-400 text-sm">
                    <FormattedDate date={post.data.pubDate} lang={lang} />
                  </span>
                </div>
              </a>
            ))
          }
        </div>
        <div class="mt-8 text-center">
          <a
            href={`${prefix}/dailybot#timeline`}
            class="inline-block border-b-2 border-secondary text-secondary font-bold text-xl hover:opacity-80 transition"
          >
            {t.homeSections.dailybotPostsViewAll} &rarr;
          </a>
        </div>
      </>
    ) : (
      <p class="text-gray-500 dark:text-gray-400 text-center py-8">
        {t.homeSections.dailybotPostsEmpty}
      </p>
    )}
  </div>
</section>
