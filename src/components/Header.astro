---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
import ThemeToggle from "./ThemeToggle.astro";
---

<header
	class="bg-white dark:bg-gray-900 sticky top-0 z-50 border-b border-gray-100 dark:border-gray-800 transition-colors duration-300"
>
	<nav
		class="max-w-6xl mx-auto flex items-center justify-between py-4 px-4 md:px-8"
	>
		<a
			href="/"
			class="font-extrabold text-2xl md:text-3xl tracking-tight text-blue-600 select-none"
		>
			<span class="text-black">XergioAleX</span>
		</a>
		<div class="flex items-center gap-8">
			<div class="flex gap-6">
				<HeaderLink href="/" class="nav-link">Home</HeaderLink>
				<HeaderLink href="/blog" class="nav-link">Blog</HeaderLink>
				<HeaderLink href="/about" class="nav-link">About</HeaderLink>
				<HeaderLink href="/contact" class="nav-link">Contact</HeaderLink>
			</div>
			<ThemeToggle />
		</div>
	</nav>
</header>
