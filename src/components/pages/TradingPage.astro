---
import JsonLd from '@/components/JsonLd.astro';
import HighlightCard from '@/components/pages/HighlightCard.astro';
import PageHero from '@/components/pages/PageHero.astro';
import PageSection from '@/components/pages/PageSection.astro';
import ScrollToTimeline from '@/components/pages/ScrollToTimeline.svelte';
import TradingTimeline from '@/components/trading/TradingTimeline.svelte';
import MainLayout from '@/layouts/MainLayout.astro';
import { getBlogPosts } from '@/lib/blog';
import { getUrlPrefix, type Language } from '@/lib/i18n';
import { getTranslations } from '@/lib/translations';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = getTranslations(lang);
const prefix = getUrlPrefix(lang);
const siteUrl = Astro.site?.href?.replace(/\/$/, '') ?? '';

const { postsResult: posts } = await getBlogPosts({
  lang,
  tag: 'trading',
  pageSize: 100,
});

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: 'Home',
      item: `${siteUrl}${prefix}/`,
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: t.tradingPage.title,
      item: `${siteUrl}${prefix}/trading`,
    },
  ],
};
---

<MainLayout lang={lang} title={t.tradingPage.title} description={t.tradingPage.description}>
  <Fragment slot="head">
    <JsonLd data={breadcrumbSchema} />
  </Fragment>
  <PageHero
    title={t.tradingPage.title}
    subtitle={t.tradingPage.subtitle}
    description={t.tradingPage.heroDescription}
    image="/images/trading.png"
  />

  <PageSection title={t.tradingPage.journeyTitle} description={t.tradingPage.journeyText} />

  <PageSection title={t.tradingPage.approachTitle} description={t.tradingPage.approachText} background="gray" />

  <PageSection title={t.tradingPage.areasTitle}>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {t.tradingPage.areas.map((area) => (
        <HighlightCard title={area.title} description={area.description} icon={area.icon} />
      ))}
    </div>
  </PageSection>

  <PageSection title={t.tradingPage.philosophyTitle} description={t.tradingPage.philosophyText} background="gray" />

  <section id="timeline" class="py-12 md:py-16">
    <div class="main-container">
      <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-8">
        {t.tradingPage.timelineTitle}
      </h2>
      <TradingTimeline client:visible posts={posts} lang={lang} />
    </div>
  </section>

  <ScrollToTimeline client:load lang={lang} targetLabel={t.tradingPage.timelineTitle} />
</MainLayout>
