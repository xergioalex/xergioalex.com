---
interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  background?: 'white' | 'gray';
  id?: string;
}

const { title, subtitle, description, background = 'white', id } = Astro.props;

const bgClasses =
  background === 'gray'
    ? 'bg-gray-50 dark:bg-gray-800/50'
    : 'bg-white dark:bg-gray-900';
---

<section id={id} class={`py-16 md:py-20 ${bgClasses} transition-colors duration-300`}>
  <div class="main-container">
    <div class="mb-8 md:mb-12">
      <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-3" set:html={title} />
      {subtitle && (
        <p class="text-base sm:text-lg md:text-xl text-gray-700 dark:text-gray-300 font-medium">{subtitle}</p>
      )}
      {description && (
        <div class="mt-4 text-base sm:text-lg text-gray-600 dark:text-gray-300 max-w-4xl leading-relaxed" set:html={description} />
      )}
    </div>
    <slot />
  </div>
</section>
