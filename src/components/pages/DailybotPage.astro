---
import DailyBotTimeline from '@/components/dailybot/DailyBotTimeline.svelte';
import JsonLd from '@/components/JsonLd.astro';
import HighlightCard from '@/components/pages/HighlightCard.astro';
import PageHero from '@/components/pages/PageHero.astro';
import PageSection from '@/components/pages/PageSection.astro';
import ScrollToTimeline from '@/components/pages/ScrollToTimeline.svelte';
import MainLayout from '@/layouts/MainLayout.astro';
import { getBlogPosts } from '@/lib/blog';
import { getUrlPrefix, type Language } from '@/lib/i18n';
import { getTranslations } from '@/lib/translations';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = getTranslations(lang);
const prefix = getUrlPrefix(lang);
const siteUrl = Astro.site?.href?.replace(/\/$/, '') ?? '';

const { postsResult: posts } = await getBlogPosts({
  lang,
  tag: 'dailybot',
  pageSize: 100,
});

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: 'Home',
      item: `${siteUrl}${prefix}/`,
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: t.dailybotPage.title,
      item: `${siteUrl}${prefix}/dailybot`,
    },
  ],
};
---

<MainLayout lang={lang} title={t.dailybotPage.title} description={t.dailybotPage.description}>
  <Fragment slot="head">
    <JsonLd data={breadcrumbSchema} />
  </Fragment>
  <PageHero
    title={t.dailybotPage.title}
    subtitle={t.dailybotPage.subtitle}
    description={t.dailybotPage.heroDescription}
    image="/images/dailybotyc.png"
  />

  <PageSection title={t.dailybotPage.storyTitle} description={t.dailybotPage.storyText} />

  <PageSection title={t.dailybotPage.ycTitle} description={t.dailybotPage.ycText} background="gray" />

  <PageSection title={t.dailybotPage.roleTitle} description={t.dailybotPage.roleText} />

  <PageSection title={t.dailybotPage.featuresTitle} background="gray">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {t.dailybotPage.features.map((feature) => (
        <HighlightCard
          title={feature.title}
          description={feature.description}
          icon={feature.icon}
        />
      ))}
    </div>
  </PageSection>

  <section class="py-16 md:py-20 bg-white dark:bg-gray-900 transition-colors duration-300">
    <div class="main-container text-center">
      <div class="mx-auto mb-6 flex justify-center">
        <img
          src="/images/dailybot/logo-light.png"
          alt="DailyBot"
          width={200}
          height={80}
          class="h-16 w-auto object-contain dark:hidden"
        />
        <img
          src="/images/dailybot/logo-dark.png"
          alt="DailyBot"
          width={200}
          height={80}
          class="h-16 w-auto object-contain hidden dark:block"
        />
      </div>
      <a
        href={t.dailybotPage.ctaLink}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block px-8 py-4 bg-secondary text-white font-bold text-lg rounded-xl hover:bg-secondary/90 hover:-translate-y-1 transition-all duration-300 shadow-lg hover:shadow-xl"
      >
        {t.dailybotPage.ctaText}
      </a>
    </div>
  </section>

  <section id="timeline" class="py-12 md:py-16 bg-gray-50 dark:bg-gray-800/50 transition-colors duration-300">
    <div class="main-container">
      <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-8">
        {t.dailybotPage.timelineTitle}
      </h2>
      <DailyBotTimeline client:visible posts={posts} lang={lang} />
    </div>
  </section>

  <ScrollToTimeline client:load lang={lang} targetLabel={t.dailybotPage.timelineTitle} />
</MainLayout>
