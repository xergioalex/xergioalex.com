---
import MainLayout from '@/layouts/MainLayout.astro';
import { getUrlPrefix, type Language } from '@/lib/i18n';
import { getTranslations } from '@/lib/translations';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = getTranslations(lang);
const prefix = getUrlPrefix(lang);
---

<MainLayout lang={lang} title={t.notFoundPage.title} description={t.notFoundPage.description}>
  <section class="flex items-center justify-center min-h-[60vh] py-16">
    <div class="text-center max-w-lg mx-auto px-4">
      <p class="text-8xl font-bold text-secondary mb-4">404</p>
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
        {t.notFoundPage.heading}
      </h1>
      <p class="text-lg text-gray-600 dark:text-gray-300 mb-8">
        {t.notFoundPage.message}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={`${prefix}/`}
          class="inline-block px-6 py-3 bg-secondary text-white font-semibold rounded-lg hover:opacity-90 transition"
        >
          {t.notFoundPage.backHome}
        </a>
        <a
          href={`${prefix}/blog`}
          class="inline-block px-6 py-3 border-2 border-secondary text-secondary font-semibold rounded-lg hover:bg-secondary hover:text-white transition"
        >
          {t.notFoundPage.searchBlog}
        </a>
      </div>
    </div>
  </section>
</MainLayout>
