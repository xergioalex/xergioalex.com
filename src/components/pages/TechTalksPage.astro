---
import JsonLd from '@/components/JsonLd.astro';
import HighlightCard from '@/components/pages/HighlightCard.astro';
import PageHero from '@/components/pages/PageHero.astro';
import PageSection from '@/components/pages/PageSection.astro';
import ScrollToTimeline from '@/components/pages/ScrollToTimeline.svelte';
import TechTalksTimeline from '@/components/techtalks/TechTalksTimeline.svelte';
import MainLayout from '@/layouts/MainLayout.astro';
import { getBlogPosts } from '@/lib/blog';
import { getUrlPrefix, type Language } from '@/lib/i18n';
import { getTranslations } from '@/lib/translations';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = getTranslations(lang);
const prefix = getUrlPrefix(lang);
const siteUrl = Astro.site?.href?.replace(/\/$/, '') ?? '';

const { postsResult: posts } = await getBlogPosts({
  lang,
  tag: 'talks',
  pageSize: 100,
});

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: 'Home',
      item: `${siteUrl}${prefix}/`,
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: t.techTalksPage.title,
      item: `${siteUrl}${prefix}/tech-talks`,
    },
  ],
};
---

<MainLayout lang={lang} title={t.techTalksPage.title} description={t.techTalksPage.description}>
  <Fragment slot="head">
    <JsonLd data={breadcrumbSchema} />
  </Fragment>
  <PageHero
    title={t.techTalksPage.title}
    subtitle={t.techTalksPage.subtitle}
    description={t.techTalksPage.heroDescription}
    image="/images/techtalks.png"
  />

  <PageSection title={t.techTalksPage.communityTitle} description={t.techTalksPage.communityText} />

  <PageSection title={t.techTalksPage.topicsTitle} background="gray">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {t.techTalksPage.topics.map((topic) => (
        <HighlightCard title={topic.title} description={topic.description} icon={topic.icon} />
      ))}
    </div>
  </PageSection>

  <PageSection title={t.techTalksPage.philosophyTitle} description={t.techTalksPage.philosophyText} />

  <section id="timeline" class="py-12 md:py-16">
    <div class="main-container">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-8">
        {t.techTalksPage.timelineTitle}
      </h2>
      <TechTalksTimeline client:visible posts={posts} lang={lang} />
    </div>
  </section>

  <section class="py-16 md:py-20 bg-gray-50 dark:bg-gray-800/50 transition-colors duration-300">
    <div class="main-container text-center">
      <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">{t.techTalksPage.ctaTitle}</h3>
      <p class="text-gray-600 dark:text-gray-300 mb-6 max-w-2xl mx-auto">{t.techTalksPage.ctaText}</p>
      <a href={`${prefix}/contact`} class="inline-block px-8 py-3 bg-secondary text-white font-semibold rounded-full hover:bg-secondary/90 transition-colors">
        {t.contactPage.title}
      </a>
    </div>
  </section>

  <ScrollToTimeline client:visible lang={lang} targetLabel={t.techTalksPage.timelineTitle} />
</MainLayout>
