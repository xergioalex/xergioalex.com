<button
  id="theme-toggle"
  class="w-11 h-11 flex items-center justify-center rounded-full text-xl bg-white/90 dark:bg-gray-800/90 text-gray-900 dark:text-gray-100 border border-gray-200 dark:border-gray-700 shadow-md backdrop-blur-sm transition hover:bg-gray-100 dark:hover:bg-gray-700 active:bg-gray-200 dark:active:bg-gray-600"
  aria-label="Toggle dark mode"
  type="button"
>
  <span class="block dark:hidden" aria-hidden="true">&#x2600;&#xFE0F;</span>
  <span class="hidden dark:block" aria-hidden="true">&#x1F319;</span>
  <script is:inline>
    document.getElementById("theme-toggle").onclick = function () {
      const html = document.documentElement;
      const isDark = html.classList.toggle("dark");
      localStorage.setItem("theme", isDark ? "dark" : "light");
    };
  </script>
</button>
