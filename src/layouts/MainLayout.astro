---
import '@/styles/global.css';
import BaseHead from '@/components/BaseHead.astro';
import Footer from '@/components/Footer.astro';
import Header from '@/components/layout/Header.svelte';
import ThemeToggle from '@/components/ThemeToggle.astro';

interface Props {
  lang: string;
  title: string;
  description: string;
  prevPage?: string;
  nextPage?: string;
}

const { lang, title, description, prevPage, nextPage } = Astro.props;
---

<html lang={lang}>
  <head>
    <BaseHead title={title} description={description} lang={lang} prevPage={prevPage} nextPage={nextPage} />
    <slot name="head" />
    <script is:inline src="/scripts/global.theme.js"></script>
  </head>
  <body
    class="bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-300"
  >
    <Header client:load lang={lang} />
    <div class="fixed bottom-4 right-4 z-50">
      <ThemeToggle />
    </div>
    <main class="min-h-screen">
      <slot />
    </main>
    <Footer lang={lang} />
  </body>
</html>
