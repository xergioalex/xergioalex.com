---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<html lang="en">
  <head>
    <slot name="head" />
    <script is:inline src="/scripts/global.theme.js"></script>
  </head>
  <body
    class="bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-300"
  >
    <Header />
    <!-- ThemeToggle will be added here -->
    <main class="max-w-7xl mx-auto py-12 px-4 md:px-8 min-h-screen">
      <slot />
    </main>
    <Footer />
  </body>
</html>
