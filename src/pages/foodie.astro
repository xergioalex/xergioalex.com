---
import HighlightCard from '@/components/pages/HighlightCard.astro';
import PageHero from '@/components/pages/PageHero.astro';
import PageSection from '@/components/pages/PageSection.astro';
import MainLayout from '@/layouts/MainLayout.astro';
import type { Language } from '@/lib/translations';
import { getTranslations } from '@/lib/translations';

const lang: Language = 'en';
const t = getTranslations(lang);
---

<MainLayout lang={lang} title={t.foodiePage.title} description={t.foodiePage.description}>
  <PageHero
    title={t.foodiePage.title}
    subtitle={t.foodiePage.subtitle}
    description={t.foodiePage.heroDescription}
    image="/images/foddie.png"
  />

  <PageSection title={t.foodiePage.passionTitle} description={t.foodiePage.passionText} />

  <PageSection title={t.foodiePage.contentTitle} description={t.foodiePage.contentText} background="gray" />

  <PageSection title={t.foodiePage.cookingTitle} description={t.foodiePage.cookingText} />

  <PageSection title="" background="gray">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {t.foodiePage.highlights.map((highlight) => (
        <HighlightCard title={highlight.title} description={highlight.description} icon={highlight.icon} />
      ))}
    </div>
  </PageSection>

  <!-- CTA to Instagram -->
  <section class="py-16 bg-white dark:bg-gray-900 transition-colors duration-300">
    <div class="main-container text-center">
      <a
        href="https://instagram.com/xergioalex"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block px-8 py-3 bg-secondary text-white font-semibold rounded-full hover:bg-secondary/90 transition-colors"
      >
        {t.foodiePage.ctaText}
      </a>
    </div>
  </section>
</MainLayout>
