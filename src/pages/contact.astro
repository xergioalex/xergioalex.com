        </div>
        <div>
          <p class="font-semibold text-gray-900 dark:text-white group-hover:text-secondary transition-colors">Instagram</p>
          <p class="text-sm text-gray-500 dark:text-gray-400">@xergioalex</p>
        </div>
      </a>
    </div>
  </PageSection>

  <PageSection title={t.contactPage.locationTitle}>
    <p class="text-lg text-gray-600 dark:text-gray-400">{t.contactPage.locationText}</p>
  </PageSection>
</MainLayout>
