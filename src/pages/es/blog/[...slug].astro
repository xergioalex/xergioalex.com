---
import { type CollectionEntry, getCollection, render } from 'astro:content';
import FormattedDate from '@/components/FormattedDate.astro';
import MainLayout from '@/layouts/MainLayout.astro';

const lang: string = 'es';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog');
  // Only Spanish posts (in es/ folder)
  const posts = allPosts.filter((post) => post.id.startsWith('es/'));
  return posts.map((post) => ({
    // Remove language prefix from URL: "es/first-post" -> "first-post"
    params: { slug: post.id.replace('es/', '') },
    props: post,
  }));
}
type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { heroImage, pubDate, updatedDate, title, description } = post.data;
const { Content } = await render(post);
---

<MainLayout lang={lang} title={title} description={description}>
  <main class="main-container py-24">
    <article>
      <div class="w-full">
        {
          heroImage && (
            <img
              width={1020}
              height={510}
              src={heroImage}
              alt={title}
              class="block mx-auto rounded-xl shadow-[var(--box-shadow)]"
            />
          )
        }
      </div>
      <div class="text-[rgb(var(--gray-dark))]">
        <div class="mb-4 py-4 text-center leading-none">
          <div class="mb-2 text-[rgb(var(--gray))]">
            <FormattedDate date={pubDate} lang={lang} />
            {
              updatedDate && (
                <div class="italic">
                  Última actualización: <FormattedDate date={updatedDate} lang={lang} />
                </div>
              )
            }
          </div>
          <h1 class="m-0 mb-2">{title}</h1>
          <hr />
        </div>
        <div class="prose prose-lg prose-slate dark:prose-invert max-w-none">
          <Content />
        </div>
      </div>
    </article>
  </main>
</MainLayout>
