---
import MainLayout from '@/layouts/MainLayout.astro';
import type { Language } from '@/lib/translations';
import { getTranslations } from '@/lib/translations';

const lang: Language = 'es';
const t = getTranslations(lang);
---

<MainLayout lang={lang} title={t.contactPage.title} description={t.contactPage.description}>
  <main class="main-container py-24">
    <h1>{t.contactPage.title}</h1>
    <form class="max-w-lg mt-8 space-y-4">
      <input
        type="text"
        placeholder={t.contactPage.namePlaceholder}
        class="w-full p-2 border rounded"
      />
      <input
        type="email"
        placeholder={t.contactPage.emailPlaceholder}
        class="w-full p-2 border rounded"
      />
      <textarea placeholder={t.contactPage.messagePlaceholder} class="w-full p-2 border rounded"
      ></textarea>
      <button
        type="submit"
        class="bg-black dark:bg-white text-white dark:text-black px-6 py-2 rounded"
        >{t.contactPage.sendButton}</button
      >
    </form>
  </main>
</MainLayout>
