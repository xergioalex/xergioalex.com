---
import HighlightCard from '@/components/pages/HighlightCard.astro';
import PageHero from '@/components/pages/PageHero.astro';
import PageSection from '@/components/pages/PageSection.astro';
import MainLayout from '@/layouts/MainLayout.astro';
import type { Language } from '@/lib/translations';
import { getTranslations } from '@/lib/translations';

const lang: Language = 'en';
const t = getTranslations(lang);
---

<MainLayout lang={lang} title={t.makerPage.title} description={t.makerPage.description}>
  <PageHero
    title={t.makerPage.title}
    subtitle={t.makerPage.subtitle}
    description={t.makerPage.heroDescription}
    image="/images/ia.png"
  />

  <PageSection title={t.makerPage.philosophyTitle} description={t.makerPage.philosophyText} />

  <PageSection title={t.makerPage.areasTitle} background="gray">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {t.makerPage.areas.map((area) => (
        <HighlightCard title={area.title} description={area.description} icon={area.icon} />
      ))}
    </div>
  </PageSection>

  <PageSection title={t.makerPage.currentTitle} description={t.makerPage.currentText} />

  <section class="py-16 md:py-20 bg-gray-50 dark:bg-gray-800/50 transition-colors duration-300">
    <div class="main-container text-center">
      <a
        href={t.makerPage.ctaLink}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block px-8 py-4 bg-secondary text-white font-bold text-lg rounded-xl hover:bg-secondary/90 hover:-translate-y-1 transition-all duration-300 shadow-lg hover:shadow-xl"
      >
        {t.makerPage.ctaText}
      </a>
    </div>
  </section>
</MainLayout>
