---
import BlogPreviewSection from '@/components/home/BlogPreviewSection.astro';
import ContactSection from '@/components/home/ContactSection.astro';
import HeroSection from '@/components/home/HeroSection/HeroSection.astro';
import { HomeSectionContentAlignmentEType } from '@/components/home/HomeSection/enum';
import HomeSection from '@/components/home/HomeSection/HomeSection.astro';
import MainLayout from '@/layouts/MainLayout.astro';
import type { Language } from '@/lib/translations';
import { getTranslations } from '@/lib/translations';

const lang: Language = 'en';
const t = getTranslations(lang);
---

<MainLayout lang={lang} title={t.siteTitle} description={t.siteDescription}>
	<HeroSection
		name="Sergio Alexander Florez Galeano"
		description={t.hero.description}
		typewriterWords={t.hero.typewriterWords}
	/>

	<!-- About Section -->
	<HomeSection
		title={t.homeSections.about.title}
		description={t.homeSections.about.description}
		ctaText={t.homeSections.about.cta}
		ctaLink="/about"
		cta2Text={t.homeSections.about.cta2}
		cta2Link="/cv"
		image="/images/profile.png"
		contentAlignment={HomeSectionContentAlignmentEType.RIGHT}
	/>

	<!-- DailyBot Section -->
	<HomeSection
		title={t.homeSections.dailybot.title}
		subtitle={t.homeSections.dailybot.subtitle}
		description={t.homeSections.dailybot.description}
		ctaText={t.homeSections.dailybot.cta}
		ctaLink="https://dailybot.com"
		image="/images/dailybotyc.png"
		contentAlignment={HomeSectionContentAlignmentEType.LEFT}
		variant="alt"
	/>

	<!-- Tech Talks Section -->
	<HomeSection
		title={t.homeSections.techTalks.title}
		subtitle={t.homeSections.techTalks.subtitle}
		description={t.homeSections.techTalks.description}
		ctaText={t.homeSections.techTalks.cta}
		ctaLink="/techtalks"
		image="/images/techtalks.png"
		contentAlignment={HomeSectionContentAlignmentEType.RIGHT}
	/>

	<!-- Maker Section -->
	<HomeSection
		title={t.homeSections.maker.title}
		subtitle={t.homeSections.maker.subtitle}
		description={t.homeSections.maker.description}
		ctaText={t.homeSections.maker.cta}
		ctaLink="/maker"
		image="/images/ia.png"
		contentAlignment={HomeSectionContentAlignmentEType.LEFT}
		variant="alt"
	/>

	<!-- Trading Section -->
	<HomeSection
		title={t.homeSections.trading.title}
		subtitle={t.homeSections.trading.subtitle}
		description={t.homeSections.trading.description}
		ctaText={t.homeSections.trading.cta}
		ctaLink="/trading"
		image="/images/trading.png"
		contentAlignment={HomeSectionContentAlignmentEType.RIGHT}
	/>

	<!-- Foodie Section -->
	<HomeSection
		title={t.homeSections.foodie.title}
		subtitle={t.homeSections.foodie.subtitle}
		description={t.homeSections.foodie.description}
		ctaText={t.homeSections.foodie.cta}
		ctaLink="/foodie"
		image="/images/foddie.png"
		contentAlignment={HomeSectionContentAlignmentEType.LEFT}
		variant="alt"
	/>

	<!-- Hobbies Section -->
	<HomeSection
		title={t.homeSections.hobbies.title}
		subtitle={t.homeSections.hobbies.subtitle}
		description={t.homeSections.hobbies.description}
		ctaText={t.homeSections.hobbies.cta}
		ctaLink="/hobbies"
		image="/images/bicycle.png"
		contentAlignment={HomeSectionContentAlignmentEType.RIGHT}
	/>

	<!-- Blog Preview Section -->
	<BlogPreviewSection lang={lang} />

	<!-- Contact Section -->
	<ContactSection lang={lang} />
</MainLayout>
