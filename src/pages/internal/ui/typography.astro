---
import ShowcaseLayout from '@/layouts/ShowcaseLayout.astro';

const headings = [
  {
    level: 'h1',
    classes: 'text-4xl font-bold',
    size: '2.25rem / 36px',
    usage: 'Page titles',
  },
  {
    level: 'h2',
    classes: 'text-3xl font-bold',
    size: '1.875rem / 30px',
    usage: 'Section headings',
  },
  {
    level: 'h3',
    classes: 'text-2xl font-bold',
    size: '1.5rem / 24px',
    usage: 'Subsection headings',
  },
  {
    level: 'h4',
    classes: 'text-xl font-semibold',
    size: '1.25rem / 20px',
    usage: 'Card titles',
  },
  {
    level: 'h5',
    classes: 'text-lg font-semibold',
    size: '1.125rem / 18px',
    usage: 'Minor headings',
  },
  {
    level: 'h6',
    classes: 'text-base font-semibold',
    size: '1rem / 16px',
    usage: 'Label headings',
  },
];

const textSizes = [
  {
    name: 'text-xs',
    size: '0.75rem / 12px',
    usage: 'Badges, metadata, captions',
  },
  {
    name: 'text-sm',
    size: '0.875rem / 14px',
    usage: 'Secondary text, descriptions',
  },
  { name: 'text-base', size: '1rem / 16px', usage: 'Body text, paragraphs' },
  {
    name: 'text-lg',
    size: '1.125rem / 18px',
    usage: 'Lead paragraphs, emphasis',
  },
  {
    name: 'text-xl',
    size: '1.25rem / 20px',
    usage: 'Card titles, subheadings',
  },
  { name: 'text-2xl', size: '1.5rem / 24px', usage: 'Section headings' },
  { name: 'text-3xl', size: '1.875rem / 30px', usage: 'Page titles (mobile)' },
  { name: 'text-4xl', size: '2.25rem / 36px', usage: 'Page titles (desktop)' },
];
---

<ShowcaseLayout title="Typography" description="Type scale, font weights, and hierarchy patterns" section="typography">

  <!-- Font Family -->
  <section class="mb-12" data-component="font-family">
    <h2 class="text-xl md:text-2xl font-bold mb-4">Font Family</h2>
    <div class="rounded-2xl border border-gray-200 dark:border-gray-700 p-6">
      <div class="text-3xl font-bold mb-2">Atkinson Hyperlegible</div>
      <p class="text-gray-600 dark:text-gray-300 mb-4">
        Designed for maximum legibility. Two weights loaded: Regular (400) and Bold (700).
      </p>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div class="p-4 rounded-lg bg-gray-50 dark:bg-gray-800">
          <div class="text-sm text-gray-600 dark:text-gray-300 mb-1">Regular (400)</div>
          <div class="text-2xl font-normal">The quick brown fox jumps over the lazy dog</div>
        </div>
        <div class="p-4 rounded-lg bg-gray-50 dark:bg-gray-800">
          <div class="text-sm text-gray-600 dark:text-gray-300 mb-1">Bold (700)</div>
          <div class="text-2xl font-bold">The quick brown fox jumps over the lazy dog</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Heading Hierarchy -->
  <section class="mb-12" data-component="headings">
    <h2 class="text-xl md:text-2xl font-bold mb-4">Heading Hierarchy</h2>
    <div class="space-y-4">
      {headings.map((h) => (
        <div class="flex flex-col sm:flex-row sm:items-baseline gap-2 sm:gap-6 rounded-lg border border-gray-200 dark:border-gray-700 p-4">
          <div class="shrink-0 w-12">
            <code class="text-xs bg-gray-100 dark:bg-gray-800 px-1.5 py-0.5 rounded">{h.level}</code>
          </div>
          <div class:list={[h.classes, 'flex-1']}>
            Heading Level {h.level.replace('h', '')}
          </div>
          <div class="text-xs text-gray-600 dark:text-gray-300 shrink-0">
            {h.size}
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Text Sizes -->
  <section class="mb-12" data-component="text-sizes">
    <h2 class="text-xl md:text-2xl font-bold mb-4">Text Sizes</h2>
    <div class="space-y-3">
      {textSizes.map((t) => (
        <div class="flex items-baseline gap-4 rounded-lg border border-gray-200 dark:border-gray-700 p-3">
          <code class="text-xs bg-gray-100 dark:bg-gray-800 px-1.5 py-0.5 rounded shrink-0 w-20">{t.name}</code>
          <span class={t.name}>Sample text at this size</span>
          <span class="text-xs text-gray-600 dark:text-gray-300 ml-auto shrink-0">{t.size}</span>
        </div>
      ))}
    </div>
  </section>

  <!-- Responsive Patterns -->
  <section class="mb-12" data-component="responsive-typography">
    <h2 class="text-xl md:text-2xl font-bold mb-4">Responsive Patterns</h2>
    <div class="rounded-2xl border border-gray-200 dark:border-gray-700 p-6">
      <p class="text-sm text-gray-600 dark:text-gray-300 mb-4">
        Standard responsive typography and image patterns (PLAN_standardize_typography_responsive):
      </p>
      <div class="space-y-3">
        <div class="p-3 rounded-lg bg-gray-50 dark:bg-gray-800">
          <code class="text-xs">text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold</code>
          <div class="text-xs text-gray-600 dark:text-gray-300 mt-1">Page h1, Section h2 — avoid oversized on mobile</div>
        </div>
        <div class="p-3 rounded-lg bg-gray-50 dark:bg-gray-800">
          <code class="text-xs">text-xl sm:text-2xl font-bold</code>
          <div class="text-xs text-gray-600 dark:text-gray-300 mt-1">Subsection h3</div>
        </div>
        <div class="p-3 rounded-lg bg-gray-50 dark:bg-gray-800">
          <code class="text-xs">text-base sm:text-lg text-gray-600 dark:text-gray-300</code>
          <div class="text-xs text-gray-600 dark:text-gray-300 mt-1">Body/paragraph — responsive</div>
        </div>
        <div class="p-3 rounded-lg bg-gray-50 dark:bg-gray-800">
          <code class="text-xs">text-base sm:text-lg md:text-xl font-bold</code>
          <div class="text-xs text-gray-600 dark:text-gray-300 mt-1">CTA links</div>
        </div>
        <div class="p-3 rounded-lg bg-gray-50 dark:bg-gray-800">
          <code class="text-xs">max-w-full max-w-[280px] sm:max-w-[360px] md:max-w-[480px]</code>
          <div class="text-xs text-gray-600 dark:text-gray-300 mt-1">Section images — cap size on mobile</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Code Example -->
  <section class="mb-12">
    <details class="rounded-lg border border-gray-200 dark:border-gray-700">
      <summary class="px-4 py-3 cursor-pointer text-sm font-medium hover:bg-gray-50 dark:hover:bg-gray-800">
        Show code
      </summary>
      <pre class="p-4 text-xs overflow-x-auto bg-gray-50 dark:bg-gray-800"><code>&lt;h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold tracking-tight"&gt;
  Page Title
&lt;/h1&gt;
&lt;p class="text-base sm:text-lg text-gray-600 dark:text-gray-300"&gt;
  Description text
&lt;/p&gt;</code></pre>
    </details>
  </section>

  <!-- Agent Reference -->
  <section class="mt-16 border-t border-gray-200 dark:border-gray-700 pt-8" data-agent-reference="true">
    <h2 class="text-lg font-bold mb-4">Agent Reference</h2>
    <p class="text-sm text-gray-600 dark:text-gray-300 mb-4">
      Recommended responsive classes. Hierarchy: h1 &gt; h2 &gt; h3 &gt; body &gt; links &gt; caption.
    </p>
    <div class="overflow-x-auto mb-6">
      <table class="w-full text-sm border-collapse">
        <thead>
          <tr class="border-b border-gray-200 dark:border-gray-700 text-left">
            <th class="py-2 pr-4 font-semibold">Element</th>
            <th class="py-2 pr-4 font-semibold">Classes</th>
            <th class="py-2 font-semibold">Usage</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100 dark:divide-gray-800">
          <tr>
            <td class="py-2 pr-4 font-medium">Page h1 / Section h2</td>
            <td class="py-2 pr-4"><code class="text-xs">text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold</code></td>
            <td class="py-2 text-gray-600 dark:text-gray-300">PageHero, HomeSectionContent</td>
          </tr>
          <tr>
            <td class="py-2 pr-4 font-medium">Subsection h3</td>
            <td class="py-2 pr-4"><code class="text-xs">text-xl sm:text-2xl</code></td>
            <td class="py-2 text-gray-600 dark:text-gray-300">Subtitles</td>
          </tr>
          <tr>
            <td class="py-2 pr-4 font-medium">Body/paragraph</td>
            <td class="py-2 pr-4"><code class="text-xs">text-base sm:text-lg</code></td>
            <td class="py-2 text-gray-600 dark:text-gray-300">Descriptions</td>
          </tr>
          <tr>
            <td class="py-2 pr-4 font-medium">CTA links</td>
            <td class="py-2 pr-4"><code class="text-xs">text-base sm:text-lg md:text-xl font-bold</code></td>
            <td class="py-2 text-gray-600 dark:text-gray-300">Section CTAs</td>
          </tr>
          <tr>
            <td class="py-2 pr-4 font-medium">Section images</td>
            <td class="py-2 pr-4"><code class="text-xs">max-w-full max-w-[280px] sm:max-w-[360px] md:max-w-[480px]</code></td>
            <td class="py-2 text-gray-600 dark:text-gray-300">HomeSectionImage</td>
          </tr>
        </tbody>
      </table>
    </div>
  </section>
</ShowcaseLayout>
