---
import ShowcaseLayout from '@/layouts/ShowcaseLayout.astro';

const cardTypes = [
  {
    name: 'Standard Card',
    radius: 'rounded-2xl',
    pattern: 'Border + padding, static content',
    classes: 'rounded-2xl border border-gray-200 dark:border-gray-700 p-6',
  },
  {
    name: 'Link Card',
    radius: 'rounded-2xl',
    pattern: 'Clickable with hover elevation',
    classes:
      'rounded-2xl border border-gray-200 dark:border-gray-700 p-6 hover:shadow-lg hover:-translate-y-1 transition-all duration-300',
  },
  {
    name: 'Highlight Card',
    radius: 'rounded-xl',
    pattern: 'Shadow + lift on hover (HighlightCard.astro)',
    classes:
      'rounded-xl bg-white dark:bg-gray-800 border border-gray-100 dark:border-gray-700 shadow-sm p-6 hover:shadow-lg hover:-translate-y-1 transition-all duration-300',
  },
  {
    name: 'Gradient Card',
    radius: 'rounded-3xl',
    pattern: 'Hero/welcome sections with gradient',
    classes:
      'rounded-3xl border border-gray-200 dark:border-gray-700 p-6 bg-gradient-to-br from-gray-50 to-white dark:from-gray-800/50 dark:to-gray-900',
  },
];
---

<ShowcaseLayout title="Cards" description="Card sizes, types, and hover effects" section="cards">

  <!-- Card Types -->
  <section class="mb-12" data-component="card-types">
    <h2 class="text-xl md:text-2xl font-bold mb-4">Card Types</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {cardTypes.map((card) => (
        <div class={card.classes}>
          <div class="font-semibold mb-1">{card.name}</div>
          <p class="text-sm text-gray-600 dark:text-gray-300 mb-2">{card.pattern}</p>
          <code class="text-xs text-gray-600 dark:text-gray-300">{card.radius}</code>
        </div>
      ))}
    </div>
  </section>

  <!-- Highlight Card Pattern -->
  <section class="mb-12" data-component="highlight-card">
    <h2 class="text-xl md:text-2xl font-bold mb-4">Highlight Card (HighlightCard.astro)</h2>
    <p class="text-sm text-gray-600 dark:text-gray-300 mb-4">
      Used for feature showcases. Supports optional link wrapping, icon slot, and group hover effect.
    </p>
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
      <div class="group rounded-xl bg-white dark:bg-gray-800 border border-gray-100 dark:border-gray-700 shadow-sm p-6 hover:shadow-lg hover:-translate-y-1 transition-all duration-300">
        <div class="text-3xl mb-4">&#9997;</div>
        <h3 class="text-lg font-bold mb-2 group-hover:text-secondary transition-colors">Blog</h3>
        <p class="text-sm text-gray-600 dark:text-gray-300">Write and share articles</p>
      </div>
      <div class="group rounded-xl bg-white dark:bg-gray-800 border border-gray-100 dark:border-gray-700 shadow-sm p-6 hover:shadow-lg hover:-translate-y-1 transition-all duration-300">
        <div class="text-3xl mb-4">&#128187;</div>
        <h3 class="text-lg font-bold mb-2 group-hover:text-secondary transition-colors">Projects</h3>
        <p class="text-sm text-gray-600 dark:text-gray-300">Showcase your work</p>
      </div>
      <div class="group rounded-xl bg-white dark:bg-gray-800 border border-gray-100 dark:border-gray-700 shadow-sm p-6 hover:shadow-lg hover:-translate-y-1 transition-all duration-300">
        <div class="text-3xl mb-4">&#128172;</div>
        <h3 class="text-lg font-bold mb-2 group-hover:text-secondary transition-colors">Contact</h3>
        <p class="text-sm text-gray-600 dark:text-gray-300">Get in touch</p>
      </div>
    </div>
  </section>

  <!-- Blog Card Pattern -->
  <section class="mb-12" data-component="blog-card">
    <h2 class="text-xl md:text-2xl font-bold mb-4">Blog Card</h2>
    <p class="text-sm text-gray-600 dark:text-gray-300 mb-4">
      From <code class="text-xs">BlogCard.svelte</code> â€” interactive Svelte component with image, tags, date, and hover states.
    </p>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div class="rounded-2xl border border-gray-200 dark:border-gray-700 overflow-hidden hover:shadow-lg transition-shadow duration-300">
        <div class="aspect-video bg-gray-200 dark:bg-gray-700 flex items-center justify-center text-gray-600 dark:text-gray-300 text-sm">
          Hero Image Area
        </div>
        <div class="p-5">
          <div class="flex gap-2 mb-2">
            <span class="text-xs px-2 py-0.5 rounded-full bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300">tech</span>
          </div>
          <h3 class="font-semibold mb-1">Blog Post Title</h3>
          <p class="text-sm text-gray-600 dark:text-gray-300 line-clamp-2">A brief description of the blog post content goes here.</p>
          <div class="mt-3 text-xs text-gray-600 dark:text-gray-300">Feb 17, 2026</div>
        </div>
      </div>
      <div class="rounded-2xl border border-gray-200 dark:border-gray-700 overflow-hidden hover:shadow-lg transition-shadow duration-300">
        <div class="aspect-video bg-gray-200 dark:bg-gray-700 flex items-center justify-center text-gray-600 dark:text-gray-300 text-sm">
          Hero Image Area
        </div>
        <div class="p-5">
          <div class="flex gap-2 mb-2">
            <span class="text-xs px-2 py-0.5 rounded-full bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300">personal</span>
          </div>
          <h3 class="font-semibold mb-1">Another Post</h3>
          <p class="text-sm text-gray-600 dark:text-gray-300 line-clamp-2">Another example blog card showing the standard layout pattern.</p>
          <div class="mt-3 text-xs text-gray-600 dark:text-gray-300">Feb 10, 2026</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Grid Patterns -->
  <section class="mb-12" data-component="card-grids">
    <h2 class="text-xl md:text-2xl font-bold mb-4">Grid Patterns</h2>
    <div class="space-y-6">
      <div>
        <div class="text-sm font-medium mb-2">2-Column Grid <code class="text-xs">grid-cols-1 sm:grid-cols-2 gap-4</code></div>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div class="rounded-2xl border border-gray-200 dark:border-gray-700 p-4 text-center text-sm text-gray-600 dark:text-gray-300">Card 1</div>
          <div class="rounded-2xl border border-gray-200 dark:border-gray-700 p-4 text-center text-sm text-gray-600 dark:text-gray-300">Card 2</div>
        </div>
      </div>
      <div>
        <div class="text-sm font-medium mb-2">3-Column Grid <code class="text-xs">grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4</code></div>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
          <div class="rounded-2xl border border-gray-200 dark:border-gray-700 p-4 text-center text-sm text-gray-600 dark:text-gray-300">Card 1</div>
          <div class="rounded-2xl border border-gray-200 dark:border-gray-700 p-4 text-center text-sm text-gray-600 dark:text-gray-300">Card 2</div>
          <div class="rounded-2xl border border-gray-200 dark:border-gray-700 p-4 text-center text-sm text-gray-600 dark:text-gray-300">Card 3</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Code Example -->
  <section class="mb-12">
    <details class="rounded-lg border border-gray-200 dark:border-gray-700">
      <summary class="px-4 py-3 cursor-pointer text-sm font-medium hover:bg-gray-50 dark:hover:bg-gray-800">
        Show code
      </summary>
      <pre class="p-4 text-xs overflow-x-auto bg-gray-50 dark:bg-gray-800"><code>&lt;!-- Standard card --&gt;
&lt;div class="rounded-2xl border border-gray-200 dark:border-gray-700 p-6"&gt;
  Content
&lt;/div&gt;

&lt;!-- Highlight card with hover --&gt;
&lt;div class="group rounded-xl bg-white dark:bg-gray-800 border border-gray-100 dark:border-gray-700 shadow-sm p-6 hover:shadow-lg hover:-translate-y-1 transition-all duration-300"&gt;
  &lt;h3 class="font-bold group-hover:text-secondary transition-colors"&gt;Title&lt;/h3&gt;
&lt;/div&gt;

&lt;!-- Gradient card --&gt;
&lt;div class="rounded-3xl border border-gray-200 dark:border-gray-700 p-6 bg-gradient-to-br from-gray-50 to-white dark:from-gray-800/50 dark:to-gray-900"&gt;
  Hero content
&lt;/div&gt;</code></pre>
    </details>
  </section>

  <!-- Agent Reference -->
  <section class="mt-16 border-t border-gray-200 dark:border-gray-700 pt-8" data-agent-reference="true">
    <h2 class="text-lg font-bold mb-4">Agent Reference</h2>
    <div class="overflow-x-auto">
      <table class="w-full text-sm border-collapse">
        <thead>
          <tr class="border-b border-gray-200 dark:border-gray-700 text-left">
            <th class="py-2 pr-4 font-semibold">Type</th>
            <th class="py-2 pr-4 font-semibold">Radius</th>
            <th class="py-2 font-semibold">Key Classes</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100 dark:divide-gray-800">
          {cardTypes.map((c) => (
            <tr>
              <td class="py-2 pr-4 font-medium">{c.name}</td>
              <td class="py-2 pr-4"><code class="text-xs">{c.radius}</code></td>
              <td class="py-2 text-gray-600 dark:text-gray-300"><code class="text-xs">{c.classes}</code></td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </section>
</ShowcaseLayout>
